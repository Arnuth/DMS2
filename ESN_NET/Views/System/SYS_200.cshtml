@using Resources

@{
    ViewBag.Title = "SYS_200";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div ng-controller="SYS_200_Ctrl" id="content">

    <div class="row">
        <div class="col-xs-12 col-sm-12">
            <div class="widget-box widget-color-blue">
                <div class="widget-header">
                    <h4 class="widget-title">@Resource.filterUserClass</h4>
                </div>
                
                <div class="widget-body">
                    <div class="widget-main">
                        <div class="row">
                            <div class="col-sm-3">
                                <div>
                                    <label>@Resource.userClass</label>
                                    <input type="text" placeholder="@Resource.filterUserClass" class="col-xs-12 col-sm-12" ng-model="searchUserClass"/>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

    </div>

    <br />
    <br />

    <div class="table-header">
        @Resource.resultUserClass
    </div>

    <table id="dynamic-table" class="table table-striped table-bordered table-hover">
        <thead>
            <tr>
                <th class="center" style="width:20%">@Resource.no</th>
                <th class="center">@Resource.userClass</th>
                <th style="width:10%"></th>
            </tr>
        </thead>

        <tbody>
            <tr ng-repeat="userClass in userClasss | filter:searchUserClass">
                <td class="center"> {{$index + 1}}. </td>
                <td> {{userClass.USERCLASSTEXT}} </td>
                <td class="center">
                    <div class="hidden-sm hidden-xs action-buttons">
                        <a class="blue" href="#" ng-click="editUserClass('@Session["Culture"]', userClass)">
                            <i class="ace-icon fa fa-pencil bigger-130"></i>
                        </a>

                        <a class="red" href="#" ng-click="deleteUserClass('@Session["Culture"]', userClass)">
                            <i class="ace-icon fa fa-trash-o bigger-130"></i>
                        </a>
                    </div>

                    <div class="hidden-md hidden-lg">
                        <div class="inline pos-rel">
                            <button class="btn btn-minier btn-yellow dropdown-toggle" data-toggle="dropdown" data-position="auto">
                                <i class="ace-icon fa fa-caret-down icon-only bigger-120"></i>
                            </button>

                            <ul class="dropdown-menu dropdown-only-icon dropdown-yellow dropdown-menu-right dropdown-caret dropdown-close">
                                <li>
                                    <a href="#" class="tooltip-info" data-rel="tooltip" title="@Resource.edit" ng-click="editUserClass('@Session["Culture"]', userClass)">
                                        <span class="green">
                                            <i class="ace-icon fa fa-pencil-square-o bigger-120"></i>
                                        </span>
                                    </a>
                                </li>

                                <li>
                                    <a href="#" class="tooltip-error" data-rel="tooltip" title="@Resource.delete" ng-click="deleteUserClass('@Session["Culture"]', userClass)">
                                        <span class="red">
                                            <i class="ace-icon fa fa-trash-o bigger-120"></i>
                                        </span>
                                    </a>
                                </li>
                            </ul>
                        </div>
                    </div>
                </td>

            </tr>
        </tbody>
    </table>

    <br />

    <button class="btn btn-xs btn-success pull-right" style="width:150px;border-radius:3px" ng-click="addUserClass('@Session["Culture"]')">
        <i class="ace-icon fa fa-plus bigger-110"></i>
        @Resource.add
    </button>

</div>