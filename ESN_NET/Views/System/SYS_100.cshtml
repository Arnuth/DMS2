@{
    ViewBag.Title = "SYS_100";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div ng-controller="SYS_100_Ctrl" id="content">
    <table id="dynamic-table" class="table table-striped table-bordered table-hover">
        <tr>
            <th class="center" ng-repeat="(key, val) in menus[0]" ng-hide="$index == 0" ng-style="{'color':($index > 3 ?'black':'blue'), 'width' : ($index > 3 ?'30px':'auto')}" ng-bind="setTextHeader(key)"></th>
        </tr>
        <tr ng-repeat="row in menus">
            <td ng-repeat="(key, column) in row" ng-hide="$index == 0" ng-style="{'text-align':($index > 3 ? 'center':'left')}">
                <label ng-show="{{ 'column' }} != 'Yes' && {{ 'column' }} != null">{{ column }}</label>
                <input ng-show="{{ 'column' }} == 'Yes' || {{ 'column' }} == null" ng-checked="{{ 'column' }} == 'Yes'" type="checkbox" 
                       ng-model="chkMenu" ng-click="setMenuConfig(key, row.MENUID, chkMenu, '@Session["Culture"]')" />
            </td>
        </tr>
    </table>
</div>

